@{
    ViewBag.Title = "DatHangThanhCong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center">
            <div class="alert alert-success" role="alert">
                <h2 class="mb-3">Cảm ơn bạn đã đặt hàng!</h2>
                <p class="mb-4">
                    Đơn hàng của bạn đã được xác nhận thành công.
                </p>
                <img src="https://img.icons8.com/ios/100/000000/order-delivered.png"
                     alt="Đơn hàng đã giao"
                     style="width: 100px; height: auto" />
            </div>

            <h4 class="mt-4 mb-3">Thông tin đơn hàng</h4>
            <div class="card mb-4 shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        Người nhận: <strong>Nguyễn Văn A</strong>
                    </h5>
                    <p>
                        <strong>Địa chỉ:</strong> 123 Đường ABC, Phường
                        XYZ, Thành phố HCM
                    </p>
                    <p><strong>Số điện thoại:</strong> 0123456789</p>
                    <h5 class="mt-3">Chi tiết sản phẩm</h5>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Sản phẩm</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Laptop Dell Latitude 3420</td>
                                <td>21,399,000 đ</td>
                                <td>2</td>
                                <td>42,798,000 đ</td>
                            </tr>
                            <tr>
                                <td>Laptop Dell Inspiron 15</td>
                                <td>15,490,000 đ</td>
                                <td>1</td>
                                <td>15,490,000 đ</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end">
                                    <strong>Tổng tiền:</strong>
                                </td>
                                <td><strong>58,288,000 đ</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <p class="mt-4">
                Chúng tôi sẽ gửi thông tin chi tiết về đơn hàng của bạn
                qua email.
            </p>
            <a href="/Home/Index" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>
