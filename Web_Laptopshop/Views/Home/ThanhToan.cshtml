@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <!-- Breadcrumb Navigation -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb bg-light p-3 rounded">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none">Home</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Thông tin thanh toán
                </li>
            </ol>
        </nav>

        <!-- Cart Table -->
        <div class="table-responsive mb-5">
            <table class="table table-bordered align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Giá cả</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center">
                        <th scope="row">
                            <img src="/img/1711078452562-dell-01.png"
                                 class="img-fluid rounded-circle shadow-sm"
                                 style="width: 70px; height: 70px"
                                 alt="Laptop Dell Inspiron 15" />
                        </th>
                        <td>
                            <a href="#"
                               target="_blank"
                               class="text-decoration-none text-primary fw-bold">
                                Laptop Dell Inspiron 15
                            </a>
                        </td>
                        <td>
                            <p class="mb-0">15,490,000 đ</p>
                        </td>
                        <td>
                            <div class="input-group justify-content-center"
                                 style="max-width: 120px; margin: 0 auto">
                                <button class="btn btn-outline-secondary btn-sm px-2"
                                        type="button">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <input type="text"
                                       class="form-control form-control-sm text-center"
                                       style="max-width: 50px"
                                       value="1" />
                                <button class="btn btn-outline-secondary btn-sm px-2"
                                        type="button">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td>
                            <p class="mb-0">15,490,000 đ</p>
                        </td>
                    </tr>
                    <tr class="text-center">
                        <th scope="row">
                            <img src="/img/1711079073759-lenovo-01.png"
                                 class="img-fluid rounded-circle shadow-sm"
                                 style="width: 70px; height: 70px"
                                 alt="Lenovo IdeaPad Gaming 3" />
                        </th>
                        <td>
                            <a href="#"
                               target="_blank"
                               class="text-decoration-none text-primary fw-bold">
                                Lenovo IdeaPad Gaming 3
                            </a>
                        </td>
                        <td>
                            <p class="mb-0">19,500,000 đ</p>
                        </td>
                        <td>
                            <div class="input-group justify-content-center"
                                 style="max-width: 120px; margin: 0 auto">
                                <button class="btn btn-outline-secondary btn-sm px-2"
                                        type="button">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <input type="text"
                                       class="form-control form-control-sm text-center"
                                       style="max-width: 50px"
                                       value="1" />
                                <button class="btn btn-outline-secondary btn-sm px-2"
                                        type="button">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td>
                            <p class="mb-0">19,500,000 đ</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Receiver and Payment Information -->
        <div class="row g-4">
            <!-- Receiver Information -->
            <div class="col-md-6">
                <div class="p-4 bg-white shadow-sm rounded-3">
                    <h5 class="text-uppercase fw-bold mb-4">
                        Thông Tin Người Nhận
                    </h5>
                    <div class="form-group mb-3">
                        <label for="receiverName"
                               class="form-label fw-semibold">Tên người nhận</label>
                        <input type="text"
                               class="form-control form-control-lg"
                               id="receiverName"
                               name="receiverName"
                               placeholder="Nhập tên người nhận"
                               required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="receiverAddress"
                               class="form-label fw-semibold">Địa chỉ người nhận</label>
                        <input type="text"
                               class="form-control form-control-lg"
                               id="receiverAddress"
                               name="receiverAddress"
                               placeholder="Nhập địa chỉ"
                               required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="receiverPhone"
                               class="form-label fw-semibold">Số điện thoại</label>
                        <input type="text"
                               class="form-control form-control-lg"
                               id="receiverPhone"
                               name="receiverPhone"
                               placeholder="Nhập số điện thoại"
                               required />
                    </div>
                    <a href="/Home/GioHang" class="btn btn-outline-secondary mt-3">
                        <i class="fas fa-arrow-left me-2"></i>
                        Quay lại giỏ hàng
                    </a>
                </div>
            </div>

            <!-- Payment Information -->
            <div class="col-md-6">
                <div class="p-4 bg-white shadow-sm rounded-3">
                    <h5 class="text-uppercase fw-bold mb-4">
                        Thông Tin Thanh Toán
                    </h5>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Phí vận chuyển</h6>
                        <p class="mb-0 fw-semibold">0 đ</p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Hình thức</h6>
                        <p class="mb-0 fw-semibold">
                            Thanh toán khi nhận hàng (COD)
                        </p>
                    </div>
                    <div class="py-3 border-top border-bottom d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Tổng số tiền</h5>
                        <p class="mb-0 fw-bold text-danger fs-4">
                            34,990,000 đ
                        </p>
                    </div>
                    <a href="/Home/DatHangThanhCong"
                       class="text-decoration-none">
                        <button class="btn btn-primary rounded-pill w-100 py-3 text-uppercase fw-bold">
                            Xác nhận thanh toán
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
