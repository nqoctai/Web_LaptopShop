@model Web_Laptopshop.Models.NguoiDung

@{
    ViewBag.Title = "ChinhSuaNguoiDung";
    Layout = "~/Areas/QuanLy/Views/Shared/LayoutQuanLy.cshtml";
}

<style>
    body {
        background-color: #e9ecef;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
        margin-top: 50px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .avatar-upload {
        position: relative;
        max-width: 150px;
        margin: auto;
    }

    .avatar-preview {
        width: 100%;
        height: auto;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #007bff;
    }

    .custom-file-upload {
        border: 1px solid #007bff;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
        border-radius: 4px;
        text-align: center;
        color: #007bff;
        width: 160px;
    }

        .custom-file-upload:hover {
            background-color: #007bff;
            color: white;
        }

    .card-body {
        font-weight: 700;
    }
</style>
<div id="layoutSidenav_content">
    <main class="py-5">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card shadow-lg">
                        <div class="card-header text-center bg-primary text-white">
                            <h3 class="fw-bold mb-0">
                                Cập Nhật Thông Tin Người Dùng
                            </h3>
                        </div>
                        <div class="card-body">
                            <form action="/QuanLy/NguoiDung/ChinhSuaNguoiDung/?id=@Model.Id" method="post" enctype="multipart/form-data">
                                <div class="mb-4 text-center">
                                    <div class="avatar-upload">
                                        <img id="avatarPreview"
                                             src="~/Content/Upload/Avatar/@Model.HinhDaiDien"
                                             alt="User Avatar"
                                             class="avatar-preview border" />
                                        <label for="avatarUpload"
                                               class="custom-file-upload mt-4">
                                            <i class="bi bi-upload"></i>
                                            Tải Lên Ảnh Đại Diện
                                        </label>
                                        <input type="file"
                                               id="avatarUpload"
                                               name="fileUpload"
                                               class="d-none"
                                               accept="image/*"
                                               onchange="previewAvatar(event)" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="userId"
                                           class="form-label">
                                        <strong>ID Người Dùng:</strong>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="userId"
                                           value="@Model.Id"
                                           name="userId"
                                           disabled />
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="userEmail"
                                               class="form-label">
                                            <strong>Email:</strong>
                                        </label>
                                        <input type="email"
                                               class="form-control"
                                               id="userEmail"
                                               value="@Model.Email"
                                               name="Email"
                                               required />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="userPassword"
                                               class="form-label">
                                            <strong>Mật khẩu:</strong>
                                        </label>
                                        <input type="password"
                                               class="form-control"
                                               id="userPassword"
                                               placeholder="Nhập mật khẩu mới"
                                               name="PasswordHash"
                                               required />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="userFullName"
                                           class="form-label">
                                        <strong>Tên đăng nhập:</strong>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="userFullName"
                                           name="UserName"
                                           value="@Model.TaiKhoan"
                                           required />
                                </div>
                                <div class="mb-3">
                                    <label for="userFullName"
                                           class="form-label">
                                        <strong>Họ Tên:</strong>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="userFullName"
                                           name="HoVaTen"
                                           value="@Model.HoTen"
                                           required />
                                </div>
                                
                                <div class="mb-3">
                                    <label for="userPhone"
                                           class="form-label">
                                        <strong>Số điện thoại:</strong>
                                    </label>
                                    <input type="tel"
                                           class="form-control"
                                           id="userPhone"
                                           value="@Model.SoDienThoai"
                                           name="PhoneNumber"
                                           required />
                                </div>
                                <div class="mb-3">
                                    <label for="userAddress"
                                           class="form-label">
                                        <strong>Địa chỉ:</strong>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="userAddress"
                                           value="@Model.DiaChi"
                                           name="DiaChi"
                                           required />
                                </div>
                                <div class="text-center">
                                    <button type="submit"
                                            class="btn btn-primary me-2">
                                        Cập Nhật Người Dùng
                                    </button>
                                    <a href="/Admin/NguoiDung/BangNguoiDung"
                                       class="btn btn-secondary">Hủy</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function previewAvatar(event) {
            const avatarPreview =
                document.getElementById("avatarPreview");
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function (e) {
                avatarPreview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    </script>
</div>

