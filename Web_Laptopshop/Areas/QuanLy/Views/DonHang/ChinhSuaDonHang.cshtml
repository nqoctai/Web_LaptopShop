@{
    ViewBag.Title = "ChinhSuaDonHang";
    Layout = "~/Areas/QuanLy/Views/Shared/LayoutQuanLy.cshtml";
}

<div id="layoutSidenav_content">
    <main class="py-5">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card shadow-lg">
                        <div class="card-header text-center bg-primary text-white">
                            <h3 class="fw-bold mb-0">
                                Cập Nhật Đơn Hàng
                            </h3>
                        </div>
                        <div class="card-body">
                            <form id="updateOrderForm">
                                <div class="mb-3">
                                    <label for="orderId"
                                           class="form-label"><strong>ID</strong></label>
                                    <input type="text"
                                           id="orderId"
                                           class="form-control"
                                           value="1"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="orderCustomer"
                                           class="form-label">
                                        <strong>Người đặt hàng:</strong>
                                    </label>
                                    <input type="text"
                                           id="orderCustomer"
                                           class="form-control"
                                           value="Nguyễn Văn A"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="orderAddress"
                                           class="form-label">
                                        <strong>Địa chỉ:</strong>
                                    </label>
                                    <input type="text"
                                           id="orderAddress"
                                           class="form-control"
                                           value="49 Nguyen Do Cung, TanPhu, HCM"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="orderPhone"
                                           class="form-label">
                                        <strong>Số điện thoại:</strong>
                                    </label>
                                    <input type="text"
                                           id="orderPhone"
                                           class="form-control"
                                           value="0123456789"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="productName"
                                           class="form-label">
                                        <strong>Tên Sản Phẩm:</strong>
                                    </label>
                                    <input type="text"
                                           id="productName"
                                           class="form-control"
                                           value="Laptop Asus TUF Gaming"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="productPrice"
                                           class="form-label">
                                        <strong>Giá:</strong>
                                    </label>
                                    <input type="text"
                                           id="productPrice"
                                           class="form-control"
                                           value="17,490,000 đ"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="productQuantity"
                                           class="form-label">
                                        <strong>Số lượng:</strong>
                                    </label>
                                    <input type="number"
                                           id="productQuantity"
                                           class="form-control"
                                           value="2"
                                           readonly
                                           min="1" />
                                </div>
                                <div class="mb-3">
                                    <label for="totalPrice"
                                           class="form-label">
                                        <strong>Thành tiền:</strong>
                                    </label>
                                    <input type="text"
                                           id="totalPrice"
                                           class="form-control"
                                           value="34,980,000 đ"
                                           readonly />
                                </div>
                                <div class="mb-3">
                                    <label for="orderStatus"
                                           class="form-label">
                                        <strong>Trạng thái:</strong>
                                    </label>
                                    <select id="orderStatus"
                                            class="form-select">
                                        <option value="Đang xử lý"
                                                selected>
                                            Đang xử lý
                                        </option>
                                        <option value="Đã giao hàng">
                                            Đã giao hàng
                                        </option>
                                        <option value="Đã hủy">
                                            Đã hủy
                                        </option>
                                    </select>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-2">
                                        Cập Nhật
                                    </button>
                                    <a href="/QuanLy/DonHang"
                                       class="btn btn-secondary">Quay lại</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
